# GovStack Development Server Configuration
# Core settings
USE_GPU=false
DOCKER_RUNTIME=runc

OPENAI_API_KEY="your-openai-api-key-here"
EXA_API_KEY="your-exa-api-key-here"

# Database Configuration
POSTGRES_PASSWORD=your-postgres-password
DATABASE_URL=postgresql+asyncpg://postgres:your-postgres-password@postgres-dev:5432/govstackdb

# ChromaDB Configuration
CHROMA_HOST=chroma-dev
CHROMA_PORT=8000
CHROMA_USERNAME=your-chroma-username
CHROMA_PASSWORD=your-chroma-password
CHROMA_CLIENT_AUTHN_CREDENTIALS=your-chroma-username:your-chroma-password
CHROMA_DEV_PORT=8001

# Minio Configuration
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=govstack-docs
MINIO_DEV_PORT=9001
MINIO_CONSOLE_DEV_PORT=9091

# API Security Configuration
GOVSTACK_API_KEY=your-secure-master-api-key-here
GOVSTACK_ADMIN_API_KEY=your-secure-admin-api-key-here

# Metabase Configuration
METABASE_PORT=3000
METABASE_ENCRYPTION_SECRET_KEY=your-metabase-encryption-secret-key
METABASE_SITE_URL=http://localhost:3000

# Analytics Configuration
ANALYTICS_PORT=8005
ANALYTICS_DEV_PORT=8006
ANALYTICS_DASHBOARD_PORT=3001
ANALYTICS_DASHBOARD_DEV_PORT=3002

# Development Settings
DEV_MODE=true
LOG_LEVEL=DEBUG
