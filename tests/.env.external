# External Server Testing Configuration
# Use this when testing against an existing GovStack API server

# Target API Configuration
EXTERNAL_API_URL=https://govstack-api.think.ke
API_TIMEOUT=30

# Load Testing Configuration
MAX_USERS=1000
SPAWN_RATE=10
TEST_DURATION=300
DAILY_USERS=40000

# Performance Thresholds
MAX_MEMORY_MB=2048
MAX_RESPONSE_TIME_MS=3000  # Increased for network latency
MIN_SUCCESS_RATE=0.95
MAX_ERROR_RATE=0.05

# Monitoring
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=8000

# Token tracking
TRACK_TOKEN_USAGE=true

# Concurrency settings
CONCURRENT_SESSIONS=100
MESSAGES_PER_SESSION=10

# Grafana password
GRAFANA_PASSWORD=admin

# Test result storage
RESULTS_DIR=./results

# Network settings for external testing
NETWORK_TIMEOUT=60
CONNECTION_RETRIES=3
