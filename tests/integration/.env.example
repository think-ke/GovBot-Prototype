# GovStack Integration Test Configuration
# Copy this to your main .env file or set these variables in your environment

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Base URL of the GovStack API instance to test
# Examples:
#   - Local development: http://localhost:5000
#   - Local production: http://localhost:5000
#   - Remote server: https://api.yourdomain.com
GOVSTACK_BASE_URL=http://localhost:5000

# API Key for testing (read, write permissions required)
# Get this from your GovStack instance or .env file
GOVSTACK_TEST_API_KEY=your-api-key-here

# Admin API Key (for admin-only endpoints like audit logs)
# If not set, will use GOVSTACK_TEST_API_KEY
GOVSTACK_ADMIN_API_KEY=your-admin-key-here

# =============================================================================
# OPTIONAL TEST BEHAVIOR
# =============================================================================

# Skip web crawling tests (they can be slow)
# Options: true, false
# Default: false
SKIP_CRAWL_TESTS=false

# Skip long-running tests
# Options: true, false
# Default: false
SKIP_LONG_RUNNING_TESTS=false

# Skip cleanup of test data (useful for debugging)
# Options: true, false
# Default: false
SKIP_CLEANUP=false

# =============================================================================
# OPTIONAL HTTP CLIENT SETTINGS
# =============================================================================

# HTTP request timeout in seconds
# Default: 30
REQUEST_TIMEOUT=30

# Maximum number of retry attempts for failed requests
# Default: 3
MAX_RETRIES=3

# Delay between retry attempts in seconds
# Default: 2
RETRY_DELAY=2

# =============================================================================
# OPTIONAL LOGGING SETTINGS
# =============================================================================

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Example 1: Testing local development instance
# GOVSTACK_BASE_URL=http://localhost:5005
# GOVSTACK_TEST_API_KEY=dev-test-key

# Example 2: Testing production instance (skip long tests)
# GOVSTACK_BASE_URL=http://localhost:5000
# GOVSTACK_TEST_API_KEY=prod-test-key
# SKIP_CRAWL_TESTS=true
# SKIP_LONG_RUNNING_TESTS=true

# Example 3: Testing remote instance
# GOVSTACK_BASE_URL=https://govstack.think.ke
# GOVSTACK_TEST_API_KEY=remote-test-key
# SKIP_CRAWL_TESTS=true

# Example 4: Debug mode with cleanup disabled
# GOVSTACK_BASE_URL=http://localhost:5000
# GOVSTACK_TEST_API_KEY=debug-key
# SKIP_CLEANUP=true
# LOG_LEVEL=DEBUG
